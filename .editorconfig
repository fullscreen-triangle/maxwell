# =============================================================================
# Maxwell Project - EditorConfig
# =============================================================================
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# TOML files (Cargo.toml, pyproject.toml)
[*.toml]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# LaTeX files
[*.tex]
indent_size = 2
max_line_length = 120

# BibTeX files
[*.bib]
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Git files
[.git*]
indent_size = 2

